<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BecomeAnAssociateActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/organizationNameAssociation"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="97dp"
                android:ems="10"
                android:hint="Organization's name"
                android:inputType="textPersonName"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/directorNameAssociation"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="97dp"
                android:ems="10"
                android:hint="Director's name"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/directorEmailAssociation"
                android:inputType="textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="191dp"
                android:layout_marginEnd="97dp"
                android:ems="10"
                android:hint="Directors's Email"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. About your Organization"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"/>

            <EditText
                android:id="@+id/goalOfOrganization"
                android:hint="What is the goal and mission statement of your organization?"
                android:layout_marginTop="350dp"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_width="600dp"
                android:layout_height="150dp" />

            <TextView
                android:text="2. Which is your target audience"
                android:layout_marginTop="550dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/targetAudience"
                android:layout_marginTop="620dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/exampleTargetAudience1Option"
                    android:text="Example 1"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/exampleTargetAudience2Option"
                    android:text="Example 2"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/exampleTargetAudience3Option"
                    android:text="Example 3"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/exampleTargetAudienceOtherOption"
                    android:text="Other"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <EditText
                android:visibility="invisible"
                android:id="@+id/targetAudienceOther"
                android:hint="Please specify your target audience"
                android:layout_marginTop="780dp"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. On which online platform does your\n               organization operate?"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="869dp"/>

            <RadioGroup
                android:id="@+id/platform"
                android:layout_marginTop="939dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/examplePlatform1Option"
                    android:text="Example 1"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/examplePlatform2Option"
                    android:text="Example 2"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/examplePlatform3Option"
                    android:text="Example 3"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/examplePlatformOtherOption"
                    android:text="Other"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <EditText
                android:visibility="invisible"
                android:id="@+id/platformOther"
                android:hint="Please specify on which platform you operate"
                android:layout_marginTop="1099dp"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="4. Please detail any programs, events\n or conferences that your organization\n                           has run"
                android:layout_marginTop="1200dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/detailedPastEvents"
                android:hint="Programs, conferences, events etc."
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_marginTop="1310dp"
                android:layout_width="600dp"
                android:layout_height="150dp" />

            <TextView
                android:text="5. Why would you like to associate with\n               Synergy Network Int.?"
                android:layout_marginTop="1510dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/interestFromAssociation"
                android:hint="Interest from association"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_marginTop="1590dp"
                android:layout_width="600dp"
                android:layout_height="150dp" />

            <Button
                android:text="Submit"
                android:layout_marginTop="1800dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/submit_button"
                android:textColor="@color/magenta"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SubmitAssociationRequest"/>

            </RelativeLayout>
    </LinearLayout>
</ScrollView>